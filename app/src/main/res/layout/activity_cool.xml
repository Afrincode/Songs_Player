<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CoolActivity">


    <ImageButton
        android:id="@+id/playbuttonid"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:onClick="playSong"
        android:src="@drawable/baseline_play_arrow_black_24dp"
        android:text="Play" />

    <Button
        android:id="@+id/pausebuttonid"
        android:layout_width="104dp"
        android:layout_height="61dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Pause"
        android:onClick="pauseSong"
        android:textSize="18sp" />
    <Button
        android:id="@+id/stopbuttonid"
        android:layout_width="104dp"
        android:layout_height="61dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:text="Stop"
        android:onClick="stopSong"
        android:textSize="18sp" />
</LinearLayout>